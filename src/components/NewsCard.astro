---
const { post } = Astro.props;
const { title, pubDate, image, description } = post.data;
const url = `/posts/${post.slug}`;

const formattedDate = new Date(pubDate).toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="news-card">
  <a href={url} class="card-link">
    <div class="image-container">
      {
        image ? (
          <img src={image.url} alt={image.alt || title} />
        ) : (
          <div class="placeholder-image" />
        )
      }
    </div>
    <div class="content">
      <time datetime={pubDate}>{formattedDate}</time>
      <h3>{title}</h3>
      <p>{description}...</p>
    </div>
  </a>
</article>

<style>
  .news-card {
    background-color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    display: flex;
    flex-direction: column;
    border-bottom: 3px solid transparent;
  }

  .news-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    border-bottom-color: var(--color-accent);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .image-container {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #eee;
    position: relative;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  /* Zoom effect on hover */
  .news-card:hover .image-container img {
    transform: scale(1.1);
  }

  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  time {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 0.5rem;
    display: block;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: var(--color-text-heading);
    line-height: 1.2;
    font-weight: 700;
  }

  /* Initial hover state for title */
  .news-card:hover h3 {
    color: var(--color-primary);
  }

  p {
    font-size: 1rem;
    color: var(--color-text);
    line-height: 1.5;
    margin-bottom: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    h3 {
      font-size: 1.25rem;
    }
  }
</style>
